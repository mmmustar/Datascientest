server {
    listen 80;
    server_name nginx.musco.cloudns.be www.nginx.musco.cloudns.be;

    root /var/www/blog;
    index index.html index.htm index.php;
    error_log /etc/nginx/logs/error_log;
    access_log /etc/nginx/logs/access_log;

    location / {
        try_files $uri $uri/ =404;
    }
}

server {
    listen 80;
    server_name www.nginx.musco.cloudns.be;
    return 301 http://nginx.musco.cloudns.be$request_uri ;
}